&НаСервереБезКонтекста
Функция ЦенаНоменклатуры(Номенклатура, Дата)
	Запрос = Новый Запрос();
	Запрос.Текст = "ВЫБРАТЬ
	|	ЦеныНоменклатурыСрезПоследних.Цена
	|ИЗ
	|	РегистрСведений.ЦеныНоменклатуры.СрезПоследних(&Дата, Номенклатура = &Номенклатура) КАК ЦеныНоменклатурыСрезПоследних";
	Запрос.УстановитьПараметр("Дата", Дата);
	Запрос.УстановитьПараметр("Номенклатура", Номенклатура);
	Результат = Запрос.Выполнить();
	
	Если Результат.Пустой() Тогда
		Цена = 0;
	Иначе
		Выборка = Результат.Выбрать();
		Выборка.Следующий();
		Цена = Выборка.Цена;
	КонецЕсли;
	
	Возврат Цена;
	
КонецФункции

&НаКлиенте
Процедура РассчитатьСумму()
	Объект.СуммаДокумента = Объект.Цена - Объект.БаллыКСписанию;
КонецПроцедуры

&НаСервере
Процедура КлиентПриИзмененииНаСервере()
	
	Если ЗначениеЗаполнено(Объект.Клиент) Тогда
		
		Если ЗначениеЗаполнено(Объект.Ссылка) Тогда

			МоментВремени = Новый Граница(Объект.Ссылка.МоментВремени(), ВидГраницы.Исключая);
			
		Иначе
			
			МоментВремени = ТекущаяДатаСеанса();
			
		КонецЕсли;

		Объект.БаллыКСписанию = Документы.ПродажаБилета.ОстатокБонусныхБалловКлиентов(Объект.Клиент, МоментВремени);
	
	Иначе
		Объект.БаллыКСписанию = 0;
	КонецЕсли;
	
КонецПроцедуры

